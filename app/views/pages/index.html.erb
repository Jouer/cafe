<% if current_user.admin?  %>
<h1>Listing pages</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Permalink</th>
      <th>Position</th>
      <th>Visible</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @pages.each do |page| %>
      <tr>
        <td><%= page.name %></td>
        <td><%= page.permalink %></td>
        <td><%= page.position %></td>
        <td><%= page.visible %></td>
        <td><%= link_to 'Show', subject_page_path(@subject, page)%></td>
        <td><%= link_to 'Edit', edit_subject_page_path(@subject, page) %></td>
        <td><%= link_to 'Destroy', [@subject, page], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Page', new_subject_page_path(@subject) %>
<% end %>